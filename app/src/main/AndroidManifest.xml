<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.vero.sosa.petagram">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="es.vero.sosa.petagram.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="es.vero.sosa.petagram.FavoritosActivity"
            android:parentActivityName="es.vero.sosa.petagram.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.vero.sosa.petagram.MainActivity"></meta-data>

        </activity>
    </application>

</manifest>
